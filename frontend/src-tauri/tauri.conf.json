{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Sayam",
  "version": "0.1.0",
  "identifier": "com.siddarth.sayam",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Sayam",
        "width": 680,
        "height": 540,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true,
        "visible": true,
        "center": true,
        "resizable": true,
        "shadow": false
      }
    ],
    "security": {
      "csp": null
    },
    "macOSPrivateApi": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}